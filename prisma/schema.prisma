generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}


model Product {
  id                    String          @id @default(uuid())
  title                 String
  description           String?         @db.Text 
  price                 Decimal         @db.Decimal(10, 2)
  currency              String          @db.VarChar(10)

  primaryMaterial       String?         
  secondaryMaterials    String[]        
  woodTreatment         String?         
  finish                String?         
  originOfMaterial      String?       
  handmade              Boolean         @default(true) 
  craftsmanshipDetails  String[]       

  width                 Decimal?        @db.Decimal(10, 2)
  depth                 Decimal?        @db.Decimal(10, 2)
  height                Decimal?        @db.Decimal(10, 2)
  unitOfMeasure         String?         @db.VarChar(10) 
  weight                Decimal?        @db.Decimal(10, 2)
  weightUnit            String?         @db.VarChar(10) 
  seatingCapacity       Int?
  storageCapacity       String?         

  style                 String?       
  color                 String?         
  texture               String?        
  designInspiration     String?
  pattern               String?

  features              String[]        
  assemblyRequired      Boolean?
  careInstructions      String?         @db.Text
  warranty              String?

  uniqueIdentifier      String?         @unique 
  designer              String?
  creationDate          DateTime?      
  story                 String?         @db.Text

  createdAt             DateTime        @default(now())
  updatedAt             DateTime        @updatedAt

  // Relations
  category              Category        @relation(fields: [categoryId], references: [id])
  categoryId            String
  images                ProductImage[]
}

model Category {
  id       String     @id @default(uuid())
  name     String     @unique
  categoryImage String?
  products Product[]
}

model ProductImage {
  id        String   @id @default(uuid())
  url       String
  altText   String?
  isMain    Boolean  @default(false)
  createdAt DateTime @default(now())

  // Relations
  product   Product  @relation(fields: [productId], references: [id])
  productId String
}


model User {
  id    String  @id @default(uuid())
  firstName String
  lastName  String
  email    String  @unique
  phone  String
  password String

  //Location data
  adress  String
  city    String
  postalCode Int
  country  String
}